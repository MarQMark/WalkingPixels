<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_iconbar_foundation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconbar"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_iconbar_health"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/image_iconbar_foundation"
        app:layout_constraintEnd_toEndOf="@+id/image_iconbar_foundation"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_iconbar_foundation"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/image_iconbar_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_iconbar_foundation"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_iconbar_foundation"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/lbl_iconbar_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:textColor="@color/bronze"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/image_iconbar_foundation"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_iconbar_foundation" />

    <TextView
        android:id="@+id/lbl_iconbar_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_iconbar_progress"
        android:textColor="#140C1C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_iconbar_foundation"
        app:layout_constraintEnd_toEndOf="@+id/image_iconbar_foundation"
        app:layout_constraintStart_toEndOf="@+id/image_iconbar_icon"
        app:layout_constraintTop_toTopOf="@+id/image_iconbar_foundation" />


</androidx.constraintlayout.widget.ConstraintLayout>