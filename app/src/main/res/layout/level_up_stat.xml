<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.game.walkingpixels.controller.view.ResponsiveButton
        android:id="@+id/btn_level_up_stat_rm_level"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:foreground="@drawable/remove_level"
        app:layout_constraintEnd_toStartOf="@+id/lbl_level_up_stat_level"
        app:layout_constraintTop_toBottomOf="@+id/lbl_level_up_stat_name" />

    <TextView
        android:id="@+id/lbl_level_up_stat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/scroll_foreground"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.game.walkingpixels.controller.view.ResponsiveButton
        android:id="@+id/btn_level_up_stat_add_level"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:foreground="@drawable/add_level"
        app:layout_constraintStart_toEndOf="@+id/lbl_level_up_stat_level"
        app:layout_constraintTop_toTopOf="@+id/btn_level_up_stat_rm_level" />

    <TextView
        android:id="@+id/lbl_level_up_stat_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_level_up_level"
        android:textColor="@color/scroll_foreground"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_level_up_stat_rm_level"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_level_up_stat_rm_level" />

    <TextView
        android:id="@+id/lbl_level_up_stat_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/scroll_foreground"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_level_up_stat_rm_level" />
</androidx.constraintlayout.widget.ConstraintLayout>