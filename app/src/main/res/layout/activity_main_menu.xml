<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainMenu">

    <Button
        android:id="@+id/btn_main_menu_play"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="PLAY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_main_menu_options"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="OPTIONS"
        app:layout_constraintBottom_toTopOf="@+id/btn_main_menu_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_menu_play" />

    <Button
        android:id="@+id/btn_main_menu_exit"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="QUIT GAME"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_menu_play" />

</androidx.constraintlayout.widget.ConstraintLayout>