<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalkingPixels" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bronze</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/bronze</item>
        <item name="android:textViewStyle">@style/AlagardTextViewStyle</item>
    </style>
    <style name="AlagardTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/alagard</item>
    </style>
    <style name="ScrollSwitch">
        <item name="colorControlActivated">@color/scroll_foreground</item>
        <item name="colorSwitchThumbNormal">@color/scroll_background</item>
        <item name="android:fontFamily">@font/alagard</item>
    </style>
    <style name="BronzeSwitch">
        <item name="colorControlActivated">@color/bronze</item>
        <item name="colorSwitchThumbNormal">@color/light_bronze</item>
        <item name="android:fontFamily">@font/alagard</item>
    </style>
    <style name="ScrollAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:fontFamily">@font/alagard</item>
        <item name="android:background">@color/scroll_background</item>
        <item name="android:textColorPrimary">@color/scroll_foreground</item>
    </style>
</resources>