<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.walkingpixels">

    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalkingPixels">
        <activity android:name=".controller.activity.Credits"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.Help"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.Settings"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.LevelUp"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.Stats"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.Map"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.Drawing"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.Walking"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controller.activity.MainMenu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>